<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PocketMechanic.ViewModels"
             xmlns:models="clr-namespace:PocketMechanic.Models"
             x:Class="PocketMechanic.Views.GaragePage"
             x:DataType="viewmodels:GarageViewModel"
             Title="My Garage">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,10" BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
            <Label Text="My Garage" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
            <Button Text="+" 
                    FontSize="32"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    Command="{Binding AddVehicleCommand}"
                    HorizontalOptions="End"
                    VerticalOptions="Center"/>
        </Grid>

        <!-- Content -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <ScrollView>
                <StackLayout Padding="20">
                    <!-- Empty State -->
                    <StackLayout IsVisible="{Binding HasVehicles, Converter={StaticResource InvertedBoolConverter}}"
                                 Padding="20"
                                 VerticalOptions="CenterAndExpand">
                        <Label Text="ðŸš—" 
                               FontSize="72"
                               HorizontalOptions="Center"/>
                        <Label Text="No vehicles yet" 
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,20,0,10"/>
                        <Label Text="Tap the + button to add your first vehicle" 
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                    </StackLayout>

                    <!-- Vehicles List -->
                    <CollectionView ItemsSource="{Binding Vehicles}"
                                    IsVisible="{Binding HasVehicles}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Vehicle">
                                <Border Margin="0,0,0,15" 
                                        Padding="15"
                                        StrokeThickness="1"
                                        Stroke="LightGray"
                                        StrokeShape="RoundRectangle 10"
                                        BackgroundColor="White">
                                    <Border.Shadow>
                                        <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                                    </Border.Shadow>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:GarageViewModel}}, Path=SelectVehicleCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    
                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                        <!-- Vehicle Info -->
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding DisplayName}"
                                               FontSize="20"
                                               FontAttributes="Bold"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding Make}"
                                               FontSize="14"
                                               TextColor="Gray"/>
                                        
                                        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="10">
                                            <Label Text="ðŸ“"
                                                   FontSize="16"/>
                                            <Label Text="{Binding CurrentMileage, StringFormat='{0:N0} miles'}"
                                                   FontSize="16"/>
                                        </HorizontalStackLayout>

                                        <!-- Arrow Icon -->
                                        <Label Grid.RowSpan="3" Grid.Column="1"
                                               Text="â€º"
                                               FontSize="32"
                                               TextColor="Gray"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>
