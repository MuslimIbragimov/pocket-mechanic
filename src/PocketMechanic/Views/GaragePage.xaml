<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PocketMechanic.ViewModels"
             xmlns:models="clr-namespace:PocketMechanic.Models"
             x:Class="PocketMechanic.Views.GaragePage"
             x:DataType="viewmodels:GarageViewModel"
             Title="My Garage">

    <!-- Content -->
    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <StackLayout Padding="20">
                <!-- Empty State with Centered Add Button -->
                <StackLayout IsVisible="{Binding HasVehicles, Converter={StaticResource InvertedBoolConverter}}"
                             Spacing="20"
                             VerticalOptions="CenterAndExpand">
                    <Label Text="ðŸš—" 
                           FontSize="72"
                           HorizontalOptions="Center"/>
                    <Label Text="No vehicles yet" 
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,20,0,10"/>
                    <Label Text="Tap the + button to add your first vehicle" 
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="Gray"
                           Margin="0,0,0,20"/>
                    <Button Text="+" 
                            FontSize="32"
                            WidthRequest="60"
                            HeightRequest="60"
                            CornerRadius="30"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Command="{Binding AddVehicleCommand}"
                            HorizontalOptions="Center"/>
                </StackLayout>

                <!-- Vehicles List with Add Button at End -->
                <StackLayout IsVisible="{Binding HasVehicles}"
                             Spacing="0">
                    <CollectionView ItemsSource="{Binding Vehicles}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Vehicle">
                                <Border Margin="0,0,0,15" 
                                        Padding="0"
                                        StrokeThickness="1"
                                        Stroke="LightGray"
                                        StrokeShape="RoundRectangle 10"
                                        BackgroundColor="White"
                                        HeightRequest="120">
                                    <Border.Shadow>
                                        <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                                    </Border.Shadow>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:GarageViewModel}}, Path=SelectVehicleCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    
                                    <Grid>
                                        <!-- Background Image -->
                                        <Image Source="{Binding ImagePath}"
                                               Aspect="AspectFill"
                                               IsVisible="{Binding ImagePath, Converter={StaticResource IsNotNullConverter}}"/>
                                        <!-- Dark overlay for text readability -->
                                        <BoxView Color="Black"
                                                 Opacity="0.5"
                                                 IsVisible="{Binding ImagePath, Converter={StaticResource IsNotNullConverter}}"/>
                                        
                                        <!-- Content -->
                                        <Grid Padding="15" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                            <!-- Vehicle Info -->
                                            <Label Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding DisplayName}"
                                                   FontSize="20"
                                                   FontAttributes="Bold">
                                                <Label.Style>
                                                    <Style TargetType="Label">
                                                        <Setter Property="TextColor" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding ImagePath, Converter={StaticResource IsNotNullConverter}}" Value="True">
                                                                <Setter Property="TextColor" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Label.Style>
                                            </Label>
                                            
                                            <Label Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding Make}"
                                                   FontSize="14">
                                                <Label.Style>
                                                    <Style TargetType="Label">
                                                        <Setter Property="TextColor" Value="Gray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger TargetType="Label" Binding="{Binding ImagePath, Converter={StaticResource IsNotNullConverter}}" Value="True">
                                                                <Setter Property="TextColor" Value="White"/>
                                                                <Setter Property="Opacity" Value="0.9"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Label.Style>
                                            </Label>
                                            
                                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="10">
                                                <Label Text="{Binding CurrentMileage, StringFormat='{0:N0} miles'}"
                                                       FontSize="16">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="TextColor" Value="Black"/>
                                                            <Style.Triggers>
                                                                <DataTrigger TargetType="Label" Binding="{Binding ImagePath, Converter={StaticResource IsNotNullConverter}}" Value="True">
                                                                    <Setter Property="TextColor" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                        </HorizontalStackLayout>

                                        <!-- Arrow Icon -->
                                        <Label Grid.RowSpan="3" Grid.Column="1"
                                               Text="â€º"
                                               FontSize="32"
                                               VerticalOptions="Center">
                                            <Label.Style>
                                                <Style TargetType="Label">
                                                    <Setter Property="TextColor" Value="Gray"/>
                                                    <Style.Triggers>
                                                        <DataTrigger TargetType="Label" Binding="{Binding ImagePath, Converter={StaticResource IsNotNullConverter}}" Value="True">
                                                            <Setter Property="TextColor" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <!-- Add Vehicle Button at End of List -->
                    <Button Text="+ Add Vehicle" 
                            FontSize="18"
                            Padding="15"
                            Margin="0,10,0,20"
                            CornerRadius="10"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Command="{Binding AddVehicleCommand}"
                            HorizontalOptions="Fill"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
